<!-- Header -->
<header class="sticky top-0 bg-black bg-opacity-80 backdrop-blur-md z-10 p-4 border-b border-gray-800">
    <div class="flex justify-between items-center">
        <h1 class="text-xl font-bold">Messages</h1>
        <div class="flex gap-4">
            <i class="fa-solid fa-gear"></i>
            <i class="fa-regular fa-envelope"></i>
        </div>
    </div>
</header>

<!-- Messages with static data -->
<div class="pb-16">
    <div class="relative mb-4 p-4">
        <i class="fa-solid fa-magnifying-glass absolute left-7 top-7 text-gray-500"></i>
        <input type="text" placeholder="Search Direct Messages" class="w-full bg-gray-900 rounded-full py-2 pl-10 pr-4 focus:outline-none focus:ring-1 focus:ring-blue-500">
    </div>
    
    <!-- Static message list -->
    <div class="message-list">
        <div class="p-4 border-b border-gray-800 hover:bg-gray-900 transition-colors">
            <div class="flex">
                <img src="https://pbs.twimg.com/profile_images/1683325380441128960/yRsRRjGO_400x400.jpg" alt="Profile" class="w-12 h-12 rounded-full mr-3">
                <div class="flex-1">
                    <div class="flex justify-between">
                        <div>
                            <span class="font-bold">John Doe</span>
                            <span class="text-gray-500">@johndoe • 2h</span>
                        </div>
                        <i class="fa-solid fa-ellipsis text-gray-500"></i>
                    </div>
                    <p class="text-gray-500 truncate">Hey, how are you doing?</p>
                </div>
            </div>
        </div>
        
        <div class="p-4 border-b border-gray-800 hover:bg-gray-900 transition-colors">
            <div class="flex">
                <img src="https://pbs.twimg.com/profile_images/1683325380441128960/yRsRRjGO_400x400.jpg" alt="Profile" class="w-12 h-12 rounded-full mr-3">
                <div class="flex-1">
                    <div class="flex justify-between">
                        <div>
                            <span class="font-bold">Jane Smith</span>
                            <span class="text-gray-500">@janesmith • 1d</span>
                        </div>
                        <i class="fa-solid fa-ellipsis text-gray-500"></i>
                    </div>
                    <p class="text-gray-500 truncate">Did you see the latest announcement?</p>
                </div>
            </div>
        </div>
    </div>
</div> 