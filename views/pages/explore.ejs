    <div class="p-4 border-b border-gray-800">
        <h2 class="text-xl font-bold mb-2">Trends for you</h2>
    </div>
    
    <% if (!req.query.tab || req.query.tab === 'for-you') { %>
        <!-- For You tab trends -->
        <div class="p-4 border-b border-gray-800 hover:bg-gray-900 transition-colors">
