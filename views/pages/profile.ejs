<!-- Header -->
<header class="sticky top-0 bg-black bg-opacity-80 backdrop-blur-md z-10 p-4 border-b border-gray-800">
    <div class="flex items-center">
        <a href="/" class="mr-6">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="text-xl font-bold">Username</h1>
            <p class="text-gray-500 text-sm">3,245 posts</p>
        </div>
    </div>
</header>

<!-- Profile Header -->
<div class="relative">
    <!-- Cover Photo -->
    <div class="h-48 bg-gray-800">
        <img src="https://pbs.twimg.com/profile_banners/783214/1646075315/1500x500" alt="Cover" class="w-full h-full object-cover">
    </div>
    
    <!-- Profile Photo -->
    <div class="absolute left-4 -bottom-16">
        <img src="https://pbs.twimg.com/profile_images/1683325380441128960/yRsRRjGO_400x400.jpg" alt="Profile" class="w-32 h-32 rounded-full border-4 border-black">
    </div>
    
    <!-- Edit Profile Button -->
    <div class="flex justify-end p-4">
        <button class="border border-gray-600 hover:bg-gray-900 text-white rounded-full px-4 py-1.5 font-bold">Edit profile</button>
    </div>
</div>

<!-- Profile Info -->
<div class="mt-16 px-4">
    <h2 class="text-xl font-bold">Username</h2>
    <p class="text-gray-500">@username</p>
    
    <div class="my-3">
        <p>Web developer, open source enthusiast, and tech blogger.</p>
        
        <div class="flex flex-wrap gap-y-2 text-gray-500 mt-2">
            <div class="flex items-center mr-4">
                <i class="fa-solid fa-location-dot mr-1"></i>
                <span>San Francisco, CA</span>
            </div>
            <div class="flex items-center mr-4">
                <i class="fa-solid fa-link mr-1"></i>
                <a href="#" class="text-blue-500 hover:underline">website.com</a>
            </div>
            <div class="flex items-center mr-4">
                <i class="fa-solid fa-calendar mr-1"></i>
                <span>Joined June 2012</span>
            </div>
        </div>
    </div>
    
    <div class="flex mt-3">
        <a href="#" class="mr-4 hover:underline">
            <span class="font-bold">245</span>
            <span class="text-gray-500">Following</span>
        </a>
        <a href="#" class="hover:underline">
            <span class="font-bold">12.5K</span>
            <span class="text-gray-500">Followers</span>
        </a>
    </div>
</div>

<!-- Profile Tabs -->
<div class="profile-tabs flex border-b border-gray-800 mt-4">
    <a href="/profile?tab=posts" class="flex-1 text-center py-4 hover:bg-gray-900 transition-colors relative group <%= !req.query.tab || req.query.tab === 'posts' ? 'font-bold' : 'text-gray-500' %>">
        <span>Posts</span>
        <div class="absolute bottom-0 left-0 right-0 h-1 <%= !req.query.tab || req.query.tab === 'posts' ? 'bg-blue-500' : 'bg-transparent group-hover:bg-blue-500/30' %> transition-colors"></div>
    </a>
    <a href="/profile?tab=replies" class="flex-1 text-center py-4 hover:bg-gray-900 transition-colors relative group <%= req.query.tab === 'replies' ? 'font-bold' : 'text-gray-500' %>">
        <span>Replies</span>
        <div class="absolute bottom-0 left-0 right-0 h-1 <%= req.query.tab === 'replies' ? 'bg-blue-500' : 'bg-transparent group-hover:bg-blue-500/30' %> transition-colors"></div>
    </a>
    <a href="/profile?tab=media" class="flex-1 text-center py-4 hover:bg-gray-900 transition-colors relative group <%= req.query.tab === 'media' ? 'font-bold' : 'text-gray-500' %>">
        <span>Media</span>
        <div class="absolute bottom-0 left-0 right-0 h-1 <%= req.query.tab === 'media' ? 'bg-blue-500' : 'bg-transparent group-hover:bg-blue-500/30' %> transition-colors"></div>
    </a>
    <a href="/profile?tab=likes" class="flex-1 text-center py-4 hover:bg-gray-900 transition-colors relative group <%= req.query.tab === 'likes' ? 'font-bold' : 'text-gray-500' %>">
        <span>Likes</span>
        <div class="absolute bottom-0 left-0 right-0 h-1 <%= req.query.tab === 'likes' ? 'bg-blue-500' : 'bg-transparent group-hover:bg-blue-500/30' %> transition-colors"></div>
    </a>
</div>

<!-- Tab Content -->
<div class="pb-16">
    <!-- Sample tweet for demonstration -->
    <% if (req.query.tab === 'posts' || !req.query.tab) { %>
        <!-- Static sample posts -->
        <div class="p-4 border-b border-gray-800 tweet-card">
            <div class="flex">
                <img src="https://pbs.twimg.com/profile_images/1683325380441128960/yRsRRjGO_400x400.jpg" alt="Profile" class="w-12 h-12 rounded-full mr-3">
                <div class="flex-1">
                    <div class="flex items-center">
                        <h4 class="font-bold hover:underline cursor-pointer">Username</h4>
                        <span class="text-gray-500 ml-2">@username Â· 2d</span>
                        <i class="fa-solid fa-ellipsis ml-auto text-gray-500 hover:text-blue-500 cursor-pointer p-1 hover:bg-blue-500/10 rounded-full"></i>
                    </div>
                    <p class="mt-2 mb-3">Just deployed my latest web project! Check it out at website.com #webdev #javascript</p>
                    <div class="flex justify-between text-gray-500 max-w-md">
                        <button class="flex items-center p-2 tweet-action">
                            <i class="fa-regular fa-comment mr-2"></i>
                            <span>12</span>
                        </button>
                        <button class="flex items-center p-2 tweet-action retweet">
                            <i class="fa-solid fa-retweet mr-2"></i>
                            <span>5</span>
                        </button>
                        <button class="flex items-center p-2 tweet-action like">
                            <i class="fa-regular fa-heart mr-2"></i>
                            <span>48</span>
                        </button>
                        <button class="flex items-center p-2 tweet-action">
                            <i class="fa-solid fa-chart-simple mr-2"></i>
                            <span>1.2K</span>
                        </button>
                        <button class="flex items-center p-2 tweet-action">
                            <i class="fa-regular fa-bookmark"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <!-- Empty state -->
        <div class="flex flex-col items-center justify-center py-16 px-4 text-center">
            <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mb-4">
                <i class="fa-solid fa-feather text-2xl"></i>
            </div>
            <h2 class="text-2xl font-bold mb-2">No <%= req.query.tab === 'replies' ? 'replies' : req.query.tab === 'media' ? 'media' : 'likes' %> yet</h2>
            <p class="text-gray-500 mb-6">When you have <%= req.query.tab === 'replies' ? 'replies' : req.query.tab === 'media' ? 'media' : 'likes' %>, they will show up here.</p>
            <% if (req.query.tab === 'posts') { %>
                <button class="bg-blue-500 hover:bg-blue-600 text-white rounded-full px-4 py-2 font-bold">Create a post</button>
            <% } %>
        </div>
    <% } %>
</div> 