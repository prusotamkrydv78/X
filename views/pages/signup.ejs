<div class="max-w-md mx-auto">
    <div class="text-center mb-8">
        <svg viewBox="0 0 24 24" aria-hidden="true" class="w-10 h-10 text-white fill-current mx-auto mb-4">
            <g>
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
            </g>
        </svg>
        <h1 class="text-3xl font-bold">Join X today</h1>
    </div>

    <% if (error) { %>
        <div class="bg-red-500 bg-opacity-20 border border-red-500 text-red-500 p-3 rounded-md mb-4">
            <%= error %>
        </div>
    <% } %>

    <form class="space-y-4" action="/signup" method="POST">
        <div>
            <input type="text" name="name" placeholder="Name" required class="w-full bg-black border border-gray-800 rounded-md p-4 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <input type="text" name="username" placeholder="Username" required class="w-full bg-black border border-gray-800 rounded-md p-4 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <input type="email" name="email" placeholder="Email" required class="w-full bg-black border border-gray-800 rounded-md p-4 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <input type="password" name="password" placeholder="Password" required class="w-full bg-black border border-gray-800 rounded-md p-4 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label class="block mb-2 text-sm text-gray-400">Date of birth</label>
            <div class="grid grid-cols-3 gap-2">
                <select name="birth_month" class="bg-black border border-gray-800 rounded-md p-3" required>
                    <option value="">Month</option>
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
                <select name="birth_day" class="bg-black border border-gray-800 rounded-md p-3" required>
                    <option value="">Day</option>
                    <% for(let i=1; i<=31; i++) { %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>
                <select name="birth_year" class="bg-black border border-gray-800 rounded-md p-3" required>
                    <option value="">Year</option>
                    <% for(let i=new Date().getFullYear(); i>=1900; i--) { %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>
            </div>
        </div>
        <button type="submit" class="w-full bg-white text-black rounded-full p-3 font-bold hover:bg-gray-200">Sign up</button>
    </form>

    <div class="text-center text-sm mt-4">
        <span>Already have an account? <a href="/login" class="text-blue-500 hover:underline">Log in</a></span>
    </div>
</div>