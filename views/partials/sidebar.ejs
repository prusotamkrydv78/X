<div class="h-full flex flex-col p-2 justify-between">
    <!-- X Logo -->
    <div>
        <div class="p-3 rounded-full hover:bg-gray-800 w-fit">
            <a href="/">
                <svg viewBox="0 0 24 24" aria-hidden="true" class="w-8 h-8 text-white fill-current">
                    <g>
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
                    </g>
                </svg>
            </a>
        </div>

        <!-- Navigation -->
        <nav class="mt-2">
            <a href="/" class="flex items-center p-3 rounded-full <%= activePage === 'home' ? 'font-bold' : 'hover:bg-gray-800' %> text-xl">
                <i class="<%= activePage === 'home' ? 'fa-solid' : 'fa-regular' %> fa-house mr-4"></i>
                <span>Home</span>
            </a>
            <a href="/explore" class="flex items-center p-3 rounded-full <%= activePage === 'explore' ? 'font-bold' : 'hover:bg-gray-800' %> text-xl">
                <i class="fa-solid fa-magnifying-glass mr-4"></i>
                <span>Explore</span>
            </a>
            <a href="/notifications" class="flex items-center p-3 rounded-full <%= activePage === 'notifications' ? 'font-bold' : 'hover:bg-gray-800' %> text-xl">
                <i class="<%= activePage === 'notifications' ? 'fa-solid' : 'fa-regular' %> fa-bell mr-4"></i>
                <span>Notifications</span>
            </a>
            <a href="/messages" class="flex items-center p-3 rounded-full <%= activePage === 'messages' ? 'font-bold' : 'hover:bg-gray-800' %> text-xl">
                <i class="<%= activePage === 'messages' ? 'fa-solid' : 'fa-regular' %> fa-envelope mr-4"></i>
                <span>Messages</span>
            </a>
            <a href="/communities" class="flex items-center p-3 rounded-full <%= activePage === 'communities' ? 'font-bold' : 'hover:bg-gray-800' %> text-xl">
                <i class="<%= activePage === 'communities' ? 'fa-solid' : 'fa-regular' %> fa-user-group mr-4"></i>
                <span>Communities</span>
            </a>
            <a href="/premium" class="flex items-center p-3 rounded-full <%= activePage === 'premium' ? 'font-bold' : 'hover:bg-gray-800' %> text-xl">
                <i class="fa-solid fa-certificate mr-4"></i>
                <span>Premium</span>
            </a>
            <a href="/profile" class="flex items-center p-3 rounded-full <%= activePage === 'profile' ? 'font-bold' : 'hover:bg-gray-800' %> text-xl">
                <i class="<%= activePage === 'profile' ? 'fa-solid' : 'fa-regular' %> fa-user mr-4"></i>
                <span>Profile</span>
            </a>
            <a href="#" class="flex items-center p-3 rounded-full hover:bg-gray-800 text-xl">
                <i class="fa-solid fa-ellipsis mr-4"></i>
                <span>More</span>
            </a>
        </nav>

        <!-- Post Button -->
        <a href="#" class="bg-blue-500 hover:bg-blue-600 text-white rounded-full py-3 px-4 text-center font-bold text-lg block mt-4">
            Post
        </a>
    </div>

    <!-- Profile -->
    <div class="mb-4">
        <button class="w-full flex items-center p-3 rounded-full hover:bg-gray-800 justify-between">
            <div class="flex items-center">
                <img src="https://pbs.twimg.com/profile_images/1683325380441128960/yRsRRjGO_400x400.jpg" alt="Profile" class="w-10 h-10 rounded-full mr-3">
                <div class="text-left">
                    <div class="font-bold">Username</div>
                    <div class="text-gray-500">@username</div>
                </div>
            </div>
            <i class="fa-solid fa-ellipsis"></i>
        </button>
    </div>
</div>

<!-- Compose Tweet Modal (hidden by default) -->
<div id="compose-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-black w-full max-w-xl rounded-2xl p-4 relative border border-gray-800">
        <button id="close-compose" class="absolute top-4 left-4 text-xl hover:bg-gray-800 rounded-full p-2">
            <i class="fa-solid fa-times"></i>
        </button>
        
        <div class="ml-12 mt-12">
            <div class="flex">
                <img src="https://pbs.twimg.com/profile_images/1683325380441128960/yRsRRjGO_400x400.jpg" alt="Profile" class="w-12 h-12 rounded-full mr-3">
                <div class="flex-1">
                    <div class="border-b border-gray-800 pb-3">
                        <textarea placeholder="What is happening?!" class="w-full bg-transparent text-xl outline-none resize-none h-32 placeholder-gray-500"></textarea>
                        
                        <div class="mb-3">
                            <button class="text-blue-500 text-sm font-bold rounded-full px-3 py-1 border border-blue-500 hover:bg-blue-500/10">
                                Everyone <i class="fa-solid fa-caret-down ml-1"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center pt-3">
                        <div class="flex text-blue-500 gap-2">
                            <button class="p-2 rounded-full hover:bg-blue-500/10"><i class="fa-regular fa-image"></i></button>
                            <button class="p-2 rounded-full hover:bg-blue-500/10"><i class="fa-solid fa-gift"></i></button>
                            <button class="p-2 rounded-full hover:bg-blue-500/10"><i class="fa-regular fa-chart-bar"></i></button>
                            <button class="p-2 rounded-full hover:bg-blue-500/10"><i class="fa-regular fa-face-smile"></i></button>
                            <button class="p-2 rounded-full hover:bg-blue-500/10"><i class="fa-regular fa-calendar"></i></button>
                            <button class="p-2 rounded-full hover:bg-blue-500/10"><i class="fa-solid fa-location-dot"></i></button>
                        </div>
                        <button class="bg-blue-500 hover:bg-blue-600 text-white rounded-full px-4 py-2 font-bold disabled:opacity-50 disabled:cursor-not-allowed">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 