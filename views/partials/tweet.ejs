<div class="p-4 border-b border-gray-800 tweet-card">
    <div class="flex">
        <img src="<%= tweet.profileImage || 'https://pbs.twimg.com/profile_images/1683325380441128960/yRsRRjGO_400x400.jpg' %>" alt="Profile" class="w-12 h-12 rounded-full mr-3">
        <div class="flex-1">
            <div class="flex items-center">
                <h4 class="font-bold hover:underline cursor-pointer"><%= tweet.username || 'User' %></h4>
                <span class="text-gray-500 ml-2">@<%= tweet.handle || (tweet.username ? tweet.username.toLowerCase() : 'user') %> Â· <%= tweet.time || 'now' %></span>
                <i class="fa-solid fa-ellipsis ml-auto text-gray-500 hover:text-blue-500 cursor-pointer p-1 hover:bg-blue-500/10 rounded-full"></i>
            </div>
            <p class="mt-2 mb-3"><%= tweet.content || '' %></p>
            <% if (tweet.image) { %>
                <div class="rounded-xl overflow-hidden mb-3 tweet-image">
                    <img src="<%= tweet.image %>" alt="Tweet image" class="w-full" loading="lazy">
                </div>
            <% } %>
            <div class="flex justify-between text-gray-500 max-w-md">
                <button class="flex items-center p-2 tweet-action">
                    <i class="fa-regular fa-comment mr-2"></i>
                    <span><%= typeof tweet.comments === 'number' ? tweet.comments.toLocaleString() : '0' %></span>
                </button>
                <button class="flex items-center p-2 tweet-action retweet">
                    <i class="fa-solid fa-retweet mr-2"></i>
                    <span><%= typeof tweet.retweets === 'number' ? tweet.retweets.toLocaleString() : '0' %></span>
                </button>
                <button class="flex items-center p-2 tweet-action like">
                    <i class="fa-regular fa-heart mr-2"></i>
                    <span><%= typeof tweet.likes === 'number' ? tweet.likes.toLocaleString() : '0' %></span>
                </button>
                <button class="flex items-center p-2 tweet-action">
                    <i class="fa-solid fa-chart-simple mr-2"></i>
                    <span><%= typeof tweet.views === 'number' ? (tweet.views / 1000).toFixed(1) + 'K' : '0' %></span>
                </button>
                <button class="flex items-center p-2 tweet-action">
                    <i class="fa-regular fa-bookmark"></i>
                </button>
            </div>
        </div>
    </div>
</div> 